<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

 
 
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function(){
    $('.datepicker').datepicker();
  });

  $(document).ready(function(){
$('select').formSelect();

$(document).ready(function(){
    $('.tooltipped').tooltip();
  });
});
  </script>
   <script src="/javascripts/Project.js"></script>

   <link href='/stylesheets/DisplayRecordById.css' rel='stylesheet'  />
</head>

<body>
  <form action="/employee/editdeleterecord" method="post">
    <input type="hidden" value="<%= data.employeeid %>" name="employeeid">

  <div class="maincontainer">
    <div class="subDiv">
      <div class="textHeading">
        <div style="display: flex;justify-content:space-between;">
        Employee Update
        <a class="btn tooltipped" data-position="top" data-tooltip="Display Records" href="/employee/displayallemployee"><i class="material-icons prefix">contacts</i></a>
      </div>
      </div>
      <% var name=data.employeename.split(' ') %>
      <div class="row">
         
        <div class="input-field col s4" >
          <i class="material-icons prefix">account_circle</i>
          <input required value="<%= name[0] %>" id="firstname" type="text" class="firstname" name="firstname">
          <label for="firstname">First Name</label>
        </div>
    
    
        <div class="input-field col s4" >
          <i class="material-icons prefix">account_circle</i>
          <input required value="<%= name[1] %>" id="lastname" type="text" class="lastname" name="lastname">
          <label for="lastname">Last Name</label>
        </div>
   
  
        <div class="input-field col s4" >
          <i class="material-icons prefix">event</i>
          <input required value="<%= data.birthdate %>" type="text" class="datepicker" id="birthdate" name="birthdate">
        </div>
 
      </div>

      <% var male=data.gender=='male'?'checked':''
      var female=data.gender=='female'?'checked':'' %>
      <div class="row">
        
          <div class="input-field col s2" style="display: flex;justify-content: flex-start; ">
          <p>
            <label>
              <input required class="with-gap" value="male" name="gender" type="radio" id="male" <%= male %>/>
              <span>Male</span>
            </label>
          </p>
        </div>
       
        <div class="input-field col s2" style="display: flex;justify-content: flex-start; ">
        <p>
          <label>
            <input required class="with-gap" value="female" value="female" name="gender" type="radio" id="female" <%= female %> />
            <span>Female</span>
          </label>
        </p>
     
    </div>
    
     
      <div class="input-field col s4" >
        <i class="material-icons prefix">phone</i>
        <input required value="<%= data.mobilenumber %>" id="mobilenumber" type="number" class="validate" name="mobilenumber">
        <label for="empno">Mobile Number</label>
      </div>
     
    
      <div class="input-field col s4" >
        <i class="material-icons prefix">email</i>
        <input required value="<%= data.emailaddress %>" id="emailaddress" type="email" class="validate" name="emailaddress">
        <label for="emailaddress">Email Address</label>
      </div>
   
      </div>
      <div class="row">
       
        <div class="input-field col s12" >
          <i class="material-icons prefix">home</i>
          <input required value="<%= data.address %>" id="address" type="text" class="validate" name="address">
          <label for="empadd">Address</label>
        </div>
      
      </div>
      <div class="row">
        
            <div class="input-field col s6" >
                <select required id="state" name="state">
                    <option>Choose your state</option>
                    <option value="<%= data.state %>" disabled selected><%= data.statename %></option>
                </select>
                <label>State</label>
             
        </div>
         
          <div class="input-field col s6">
              <select required id="city" name="city">
               
                  <option value="<%= data.city %>" ><%= data.cityname %></option>
              </select>
              <label>City</label>
          </div>
     
        </div>

         

      <div class="row">
         
            <div class="input-field col s6" style="display: flex; justify-content: center; ">
                <button class="btn waves-effect waves-light" type="submit" name="action" id="action" value="Submit">Edit
                    <i class="material-icons right">send</i>
                  </button>
           
        </div>
          
        
            <div class="input-field col s6" style="display: flex; justify-content: center; ">
                <button class="btn waves-effect waves-light" type="submit" name="action" id="action" value="Reset">Delete
                    <i class="material-icons right">delete</i>
                  </button>
            
        </div>
    </div>

     

    </div>
  </div>
</form>
</body>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</html>